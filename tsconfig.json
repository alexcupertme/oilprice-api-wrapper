{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"allowJs": true,
		"resolveJsonModule": true,
		"outDir": "./build",
		"removeComments": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"moduleResolution": "node",
		"rootDir": "./src",
		"baseUrl": "./src",
		"paths": {
			"@project/*": ["*"],
		},
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["dom", "es7"]
	}
}
